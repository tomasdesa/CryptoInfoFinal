<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/novo_gradiente"
    android:id="@+id/drawerLayout">

    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">


        <TextView
            android:id="@+id/textView12"
            android:layout_width="212dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="257dp"
            android:layout_marginBottom="314dp"
            android:fontFamily="@font/doppio_one"
            android:text="@string/Conversor"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="40sp"
            app:layout_constraintBottom_toTopOf="@+id/recyclermarker"
            app:layout_constraintEnd_toEndOf="parent" />

        <ImageView
            android:id="@+id/imgmenu3"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="643dp"
            android:layout_marginRight="643dp"
            android:layout_marginBottom="338dp"
            android:src="@drawable/ic_baseline_menu_24"
            app:layout_constraintBottom_toTopOf="@+id/recyclermarker"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/converter"
            android:layout_width="145dp"
            android:layout_height="65dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="299dp"
            android:layout_marginBottom="11dp"
            android:text="@string/converter" />

        <TextView
            android:id="@+id/Resultado"
            android:layout_width="368dp"
            android:layout_height="56dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="106dp"
            android:layout_marginBottom="106dp"
            android:fontFamily="@font/doppio_one"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="24sp" />

        <com.scrounger.countrycurrencypicker.library.Buttons.CountryCurrencyButton
            android:id="@+id/picker"
            android:layout_width="363dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="188dp"
            android:layout_marginBottom="233dp"
            app:country_code="PT"
            app:show_currency="true" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="86dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="574dp"
            android:layout_marginBottom="245dp"
            android:fontFamily="@font/doppio_one"
            android:text="@string/de"
            android:textColor="@color/black"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="116dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="547dp"
            android:layout_marginBottom="186dp"
            android:fontFamily="@font/doppio_one"
            android:text="@string/para"
            android:textColor="@color/black"
            android:textSize="24sp" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="233dp"
            android:layout_height="46dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="299dp"
            android:layout_marginBottom="178dp" />

        <EditText
            android:id="@+id/Numero"
            android:layout_width="122dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="157dp"
            android:layout_marginBottom="181dp"
            android:ems="10"
            android:inputType="number" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="182dp"
            android:layout_height="55dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="482dp"
            android:layout_marginBottom="107dp"
            android:fontFamily="@font/doppio_one"
            android:text="@string/resultado"
            android:textColor="@color/black"
            android:textSize="24sp" />

    </RelativeLayout>
    <include layout="@layout/nav_drawer"></include>
</androidx.drawerlayout.widget.DrawerLayout>